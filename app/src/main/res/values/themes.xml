<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="DarkRedActionBarTheme"
        parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DarkRedActionBar</item>
        <item name="android:popupMenuStyle">@style/DarkRedPopupMenu</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DarkRedActionBar"
        parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/darkred_action_bar_background</item>
    </style>

    <!-- PopMenu styles -->
    <style name="DarkRedPopupMenu"
        parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#992222</item>
    </style>
</resources>
